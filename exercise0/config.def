
// The UI theme: light, mid, dark, darkest, legacy
type(fltk_viewer_window):theme=dark

// Demo settings
type(cgv_demo):text="Hallelll Welt"
type(cgv_demo):text_face_attrib=2
type(cgv_demo):fb_bgcolor_r=0.8
type(cgv_demo):fb_bgcolor_g=0.9
type(cgv_demo):fb_bgcolor_b=1
type(cgv_demo):wireframe=false
type(cgv_demo):draw_backside=true

/// Task 0.1: Set the custom tesselation of the quad to be used initially by cgv_demo via
///           your reflected property.
type(cgv_demo):use_custom_quad=false
type(cgv_demo):enable=false

/// Task 0.2: Set appropriate values for your drawable that renders the cube fractal.
type(cubes_drawable):enable=true
type(cubes_drawable):recursion_deph=4
type(cubes_drawable):color_r=0.1
type(cubes_drawable):color_g=1.0
type(cubes_drawable):color_b=0.1
type(cubes_drawable):drawing_mode=2
